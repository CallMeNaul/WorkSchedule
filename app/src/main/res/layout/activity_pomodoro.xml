<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PomodoroActivity"
    android:background="#04247C">
    <LinearLayout
        android:id="@+id/poro_sub"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="@dimen/margin_basex2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="3">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/margin_basex4"
                android:layout_weight="2">
                <ImageView
                    android:id="@+id/imv_tick"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/image_tick"/>
                <TextView
                    android:id="@+id/wsche"
                    android:layout_width="80dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/imv_tick"
                    android:text="@string/wsche"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:textColor="#B3B3AC"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_basex2"
                android:layout_weight="1"
                android:weightSum="2">
                <Button
                    android:id="@+id/btn_report"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:drawableLeft="@drawable/business_report"
                    android:drawableTint="@color/white"
                    android:onClick="PomodoroReport"
                    android:text="@string/report"
                    android:paddingLeft="@dimen/margin_base"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/btn_setting_pomo"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:paddingLeft="@dimen/margin_base"
                    android:drawableLeft="@drawable/setting"
                    android:onClick="PomodoroSetting"
                    android:text="@string/setting"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/margin_basex2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lb_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_basex4"
        app:layout_constraintTop_toBottomOf="@id/poro_sub"
        android:background="@drawable/label_time">
        <Button
            android:id="@+id/btn_poro"
            android:layout_marginTop="@dimen/margin_basex2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/pomodoro"
            android:layout_marginLeft="@dimen/margin_base"
            android:backgroundTint="#3A55AE"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/btn_shortbreak"
            android:layout_marginTop="@dimen/margin_basex2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_poro"
            app:layout_constraintRight_toLeftOf="@id/btn_longbreak"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/shortbreak"
            android:backgroundTint="#456ADD"/>
        <Button
            android:id="@+id/btn_longbreak"
            android:layout_marginTop="@dimen/margin_basex2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/longbreak"
            android:layout_marginRight="@dimen/margin_base"
            android:backgroundTint="#456ADD"/>
        <TextView
            android:id="@+id/tv_poro_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btn_poro"
            android:text="00:25:00"
            android:textSize="90sp"
            android:textColor="@color/white"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_shbrk_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btn_poro"
            android:text="00:05:00"
            android:textSize="90sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_longbrk_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btn_poro"
            android:text="00:10:00"
            android:textSize="90sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:visibility="gone"/>
        <Button
            android:id="@+id/btn_start_pomo"
            android:layout_width="160dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_poro"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="140dp"
            android:layout_marginBottom="@dimen/margin_basex2"
            android:backgroundTint="@color/white"
            android:text="@string/start"
            android:textColor="#04247C"
            android:textSize="25sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/tv_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/task"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/margin_basex2"
        android:layout_marginLeft="@dimen/margin_basex4"
        app:layout_constraintTop_toBottomOf="@id/lb_time"
        android:textStyle="bold"/>
    <LinearLayout
        android:id="@+id/line_task"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_task"
        android:layout_margin="@dimen/margin_basex4"
        android:orientation="vertical"/>
    <ListView
        android:id="@+id/lv_task_pomo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/line_task"
        app:layout_constraintBottom_toTopOf="@id/btn_add_task"
        android:layout_marginTop="@dimen/margin_basex2"
        android:layout_marginLeft="@dimen/margin_basex4"
        android:layout_marginRight="@dimen/margin_basex4"
        android:layout_marginBottom="@dimen/margin_base"
        android:orientation="vertical"/>
    <Button
        android:id="@+id/btn_add_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/margin_basex10"
        android:layout_marginRight="@dimen/margin_basex10"
        android:text="@string/add_task"
        android:textSize="18sp"
        android:backgroundTint="#456ADD"
        android:drawableRight="@drawable/add_round"/>
</androidx.constraintlayout.widget.ConstraintLayout>