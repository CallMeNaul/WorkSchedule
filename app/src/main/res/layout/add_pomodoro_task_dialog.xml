<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_white"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/add_task"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@drawable/rectangle_5"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/pomo_name"
        android:layout_margin="@dimen/margin_basex2"
        android:paddingLeft="@dimen/margin_basex2"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/pomo_note"
        android:layout_marginHorizontal="@dimen/margin_basex2"
        android:paddingLeft="@dimen/margin_basex2"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/time_minutes"
        android:layout_margin="@dimen/margin_basex2"
        android:paddingLeft="@dimen/margin_basex2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_basex4"
        android:layout_marginBottom="@dimen/margin_basex2"
        android:weightSum="2">
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray"
            android:text="@string/cancel"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/margin_basex4"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#00BFFF"
            android:text="@string/ok"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/margin_basex4"/>
    </LinearLayout>
</LinearLayout>