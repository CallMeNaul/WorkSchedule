<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/text_color">
    <ImageView
        android:id="@+id/img_exit_sidebar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_basex2"
        android:layout_marginRight="@dimen/margin_basex2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xin chào, Hưng"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_exit_sidebar"
        android:layout_marginLeft="@dimen/margin_basex3"/>
    <ImageView
        android:id="@+id/img_main_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/wolf"
        app:layout_constraintTop_toBottomOf="@id/img_exit_sidebar"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="@dimen/margin_basex3"
        android:background="@drawable/rectangle_avatar"/>
    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#CFE8FF"
        android:text="\@hungDuyLuan"
        app:layout_constraintTop_toBottomOf="@id/img_exit_sidebar"
        app:layout_constraintLeft_toRightOf="@id/img_main_avatar"
        android:layout_marginTop="@dimen/margin_basex10"
        android:layout_marginLeft="@dimen/margin_basex3"/>
    <ImageView
        android:id="@+id/img_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_content_copy_24"
        app:layout_constraintTop_toBottomOf="@id/img_exit_sidebar"
        app:layout_constraintLeft_toRightOf="@id/tv_username"
        android:layout_marginTop="@dimen/margin_basex10"
        android:layout_marginLeft="@dimen/margin_basex4"
        app:tint="@color/white" />

    <Button
        android:id="@+id/btn_edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#4AAFFF"
        android:text="@string/edit_profile"
        android:textColor="#CFE8FF"
        app:layout_constraintTop_toBottomOf="@id/tv_username"
        app:layout_constraintLeft_toRightOf="@id/img_main_avatar"
        android:layout_marginTop="@dimen/margin_basex3"
        android:layout_marginLeft="@dimen/margin_basex3"/>
</androidx.constraintlayout.widget.ConstraintLayout>