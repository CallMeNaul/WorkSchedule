<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupsActivity"
    android:background="@drawable/home">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/darhboard"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/darhboard"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/margin_basex4"
        android:layout_marginLeft="@dimen/margin_basex4"
        />
    <RelativeLayout
        android:id="@+id/logo_home"
        android:layout_width="104dp"
        android:layout_height="24dp"
        android:layout_marginTop="@dimen/margin_basex4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imv_tick"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/image_tick"/>
        <TextView
            android:id="@+id/wsche"
            android:layout_width="80dp"
            android:layout_height="24dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/imv_tick"
            android:text="@string/wsche"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="#B3B3AC"/>
    </RelativeLayout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/search"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/search"
        android:layout_marginTop="@dimen/margin_basex4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="@dimen/margin_basex4"
        />
    <View
        android:id="@+id/line_3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/logo_home"
        android:background="@drawable/line_3"
        android:layout_marginTop="26dp"
        />
    <TextView
        android:id="@+id/nh_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/line_3"
        android:text="@string/nh_m"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="32sp"
        android:textColor="#A2C2EE"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_groups"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/nh_m"
        app:layout_constraintBottom_toTopOf="@id/rectangle_3"
        android:layout_marginTop="18dp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rectangle_3"
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:background="@drawable/rectangle_3"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rectangle_1"
            android:layout_width="312dp"
            android:layout_height="53dp"
            android:background="@drawable/rectangle_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <TextView
                android:id="@+id/k_ho_ch_m_i"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_group"
                android:textSize="22sp"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:gravity="center_horizontal|center_vertical"
                />
            <RelativeLayout
                android:id="@+id/add_round"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/add_round"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/k_ho_ch_m_i"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>